---
import { Image, getImage } from "astro:assets";
import CardWrapper from "./CardWrapper.astro";
import type { PersonalitySummary } from "@/types/personality";

type Props = {
  friendsWith: PersonalitySummary["friendsWith"];
};

const { friendsWith } = Astro.props;
---

<CardWrapper name="friends">
  <div class="grid gap-4 place-items-center place-content-center">
    <div>
      <p
        class="text-lg sm:text-xl uppercase text-balance leading-heading tracking-widest font-mono"
      >
        Friends With
      </p>
      <p class="text-white/70">You would get along well withâ€¦</p>
    </div>
    <div class="flex gap-4 items-start">
      {
        friendsWith.map((friend) => (
          <div class="grid gap-1 place-items-center">
            <Image
              src={`/images/${friend.toLowerCase()}.png`}
              width={50}
              height={50}
              alt={friend}
            />
            <p class="text-xs sm:text-sm">{friend}</p>
          </div>
        ))
      }
    </div>
  </div>
</CardWrapper>
