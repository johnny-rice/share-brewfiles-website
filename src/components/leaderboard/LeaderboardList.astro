---
import PackageRow from "./PackageRow.astro";
---

<ul class="grid gap-4" id="leaderboard-list">
  {
    Astro.url.pathname === "/leaderboard"
      ? Array.from({ length: 300 }).map((_, i, arr) => (
          <PackageRow isLast={i === arr.length - 1} index={i + 1} />
        ))
      : Array.from({ length: 10 }).map((_, i, arr) => (
          <PackageRow isLast={i === arr.length - 1} index={i + 1} />
        ))
  }
</ul>

<script>
  import "@/lib/handlePackageRowLoad";
</script>
