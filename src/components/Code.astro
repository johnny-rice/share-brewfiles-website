---
type Props = {
  code: string;
};

const { code } = Astro.props;
---

<div class="fixed inset-0 flex justify-center items-center bg-black bg-opacity-50">
  <div class="bg-white p-8 rounded-lg shadow-lg text-center">
    <h2 class="text-xl font-bold mb-4">Access Code</h2>
    <div class="flex justify-center mb-8">
      <div class="flex">
        {code.split('').map((char, index) => (
            <span class="text-4xl font-bold mr-2">{char}</span>
        ))}
      </div>
    </div>
    <div class="mb-8">
      <button class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600 transition duration-300" onclick={copyCode}>
        {copied ? 'Copied!' : 'Copy Code'}
      </button>
    </div>
    <div>
      <button class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600 transition duration-300" onclick={closePopup}>Close</button>
    </div>
  </div>
</div>

<astro-script>
  function copyCode() {
    const el = document.createElement('textarea');
    el.value = code;
    document.body.appendChild(el);
    el.select();
    document.execCommand('copy');
    document.body.removeChild(el);
    copied = true;
  }

  function closePopup() {
    $closePopup();
  }
</astro-script>