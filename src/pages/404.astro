---
import Heading from "@/components/ui/Heading.astro";
import Link from "@/components/ui/Link.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="404 | Page Not Found">
  <div
    class="container grid gap-4 place-items-center text-center place-content-center min-h-[74vh]"
  >
    <Heading size={"lg"} tagType="h1">404 Page Not Found</Heading>
    <p class="text-2xl">Oh no! We couldn't find what you were looking for.</p>
    <Link href={"/"} variant="accent" size="large">Go Home</Link>
  </div>
</BaseLayout>
